
<table>
  <thead>
    <tr>
      <th>Username</th>
      <th>Full name</th>
      <th>Bio</th>
      <th>Website url</th>
      <th>Profile photo url</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @users.each do |user| %>
      <tr>
        <td><%= link_to user.username, user %></td>
        <td><%= user.full_name %></td>
        <td><%= user.bio %></td>
        <td><%= user.website_url %></td>
        <td><%= user.profile_photo_url %></td>
        <td></td>
        <td><%= link_to('Destroy', user, method: :delete) if current_user.username == "admin" %></td>
      </tr>
    <% end %>
  </tbody>
</table>
